---
import Home from '../icons/home.twitter.astro'
import Profile from '../icons/profile.twitter.astro'
import List from '../icons/list.twitter.astro'
import Logo from '../icons/logo.twitter.astro'
import Msg from '../icons/msg.twitter.astro'
import Notify from '../icons/notify.twitter.astro'
import Search from '../icons/search.twitter.astro'
import Setting from '../icons/setting.twitter.astro'
import Post from '../icons/post.twitter.astro'
import ProfileNav from './profileNav.astro'


---

<header>
    <picture>
        <a href="./" class="block m-auto md:m-0 md:ml-8 w-max p-3 rounded-full cursor-pointer hover:bg-gray-800"><Logo class="w-[30px]"/></a>
    </picture>
    <nav>

        <ul>
            <li class="flex text-xl font-sans w-[60px] md:w-max px-3.5 py-2.5 md:ml-8 my-1 rounded-full cursor-pointer hover:bg-gray-800"><span><Home class="w-[30px] mr-5"/></span> Home</li>
            <li class="flex text-xl font-sans w-[60px] md:w-max px-3.5 py-2.5 md:ml-8 my-1 rounded-full cursor-pointer hover:bg-gray-800"><span><Search class="w-[30px] mr-5"/></span> Explore</li>
            <li class="flex text-xl font-sans w-[60px] md:w-max px-3.5 py-2.5 md:ml-8 my-1 rounded-full cursor-pointer hover:bg-gray-800"><span><Notify class="w-[30px] mr-5"/></span> Notifications</li>
            <li class="flex text-xl font-sans w-[60px] md:w-max px-3.5 py-2.5 md:ml-8 my-1 rounded-full cursor-pointer hover:bg-gray-800"><span><Msg class="w-[30px] mr-5"/></span> Messages</li>
            <li class="flex text-xl font-sans w-[60px] md:w-max px-3.5 py-2.5 md:ml-8 my-1 rounded-full cursor-pointer hover:bg-gray-800"><span><List class="w-[30px] mr-5"/></span> Lists</li>
            <li class="flex text-xl font-sans w-[60px] md:w-max px-3.5 py-2.5 md:ml-8 my-1 rounded-full cursor-pointer hover:bg-gray-800"><span><Logo class="w-[30px] mr-5"/></span> Premium</li>
            <li class="flex text-xl font-sans w-[60px] md:w-max px-3.5 py-2.5 md:ml-8 my-1 rounded-full cursor-pointer hover:bg-gray-800"><span><Profile class="w-[30px] mr-5"/></span> Profile</li>
            <li class="flex text-xl font-sans w-[60px] md:w-max px-3.5 py-2.5 md:ml-8 my-1 rounded-full cursor-pointer hover:bg-gray-800"><span><Setting class="w-[30px] mr-5"/></span> More</li>
            <li class="flex w-[60px] md:w-[80%] md:justify-center md:text-xl md:font-bold md:font-serif px-3.5 py-3 md:ml-8 rounded-full cursor-pointer bg-[#1d9bf0]"><span><Post class="w-[30px] mr-5 md:hidden"/></span> Post</li>
            <ProfileNav/>
        </ul>
    </nav>
</header>

<style>
    li,
    picture a svg{
        fill: currentColor;
        color: white;
    }


</style>